{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "src",
		"typeRoots": ["./types", "./node_modules/@types"],
		"types": ["node", "semver", "vscode", "path-is-inside"],
		"outDir": "build",
		"sourceMap": true
	},
	"include": ["src/**/*", "types/*.d.ts"],
	"exclude": ["**/coverage", "**/__tests__", "**/__mocks__", "test/types.d.ts"]
}
