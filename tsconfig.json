{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["es2020"],
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"typeRoots": ["./types", "./node_modules/@types"]
	},
	"include": ["server.js", "index.js", "lib"],
	"exclude": [
		"lib/array-to-error/test.js",
		"lib/array-to-sentence/test.js",
		"lib/inspect-with-kind/test.js",
		"lib/stylelint-vscode/test/test.js",
		"lib/stylelint-warning-to-vscode-diagnostic/test.js"
	]
}
